{
  "rules": {
    "max-depth": ["error", 2],
    "max-params": ["error", 3],
    "max-lines-per-function": ["error", { "max": 10 }],
    "class-methods-use-this": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"]
}
